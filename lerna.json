{
  "lerna": "3.10.5",
  "version": "2.3.0",
  "changelog": {
    "repo": "alibaba/beidou",
    "labels": {
      "tag: bc": ":boom: Breaking Change",
      "tag: feat": ":rocket: New Feature",
      "tag: fix": ":bug: Bug Fix",
      "tag: polish": ":nail_care: Polish",
      "tag: doc": ":memo: Documentation",
      "tag: internal": ":house: Internal"
    }
  },
  "packages": [
    "examples/*",
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-lockfile"]
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "test/**",
        "node_modules"
      ],
      "message": "chore(release): publish %s"
    }
  },
  "npmClient": "yarn"
}
