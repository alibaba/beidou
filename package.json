{
  "name": "beidou",
  "description": "Isomorphic framework for server-rendered React apps",
  "scripts": {
    "lint": "make lint",
    "test": "make test",
    "test-only": "make test-only",
    "test-all": "make test-all",
    "cov": "make cov",
    "install": "lerna bootstrap",
    "install-all": "make install",
    "reinstall": "make reinstall",
    "clean": "make clean-all",
    "ci": "make ci",
    "changelog": "make changelog",
    "precommit": "lint-staged"
  },
  "author": "weichunpeng",
  "devDependencies": {
    "babel-eslint": "^8.1.2",
    "egg-bin": "^4.0.4",
    "eslint": "^4.11.0",
    "eslint-config-beidou": "1.0.0-alpha.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.13.4",
    "lerna": "^2.0.0",
    "lerna-changelog": "^0.5.0",
    "lint-staged": "^4.0.0",
    "prettier": "^1.9.2",
    "should": "^6.0.3",
    "supertest": "^1.2.0"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "license": "MIT",
  "config": {
    "alicov": {
      "threshold": 90
    }
  },
  "lint-staged": {
    "*.js": ["prettier --write", "eslint --fix", "git add"],
    "*.{json,css,scss,md}": ["prettier --write", "git add"]
  },
  "repository": "https://github.com/alibaba/beidou"
}
